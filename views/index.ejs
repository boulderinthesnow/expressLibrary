<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Book it Baby</title>
</head>
<body>
	<h1>I Can't Lie, It's A Library!!</h1>
	<form action="/new" method="POST">
		<input type="text" name="title" id="title">
		<input type="text" name="author" id="author">
		<input type="text" name="year" id="year">
		<input type="submit" value="submit">
	</form>
<% books.forEach(function(book) { %>
	<p>
	<a href="/<%=book.id%>"><%=book.title %></a>
	
	<%=book.author  %>
	<%=book.year  %>
	<%=book.id  %>
	

	<form method="POST" action="/delete/<%=book.id%>?_method=DELETE">
		<input type="submit" name="delete" value="KILL THE MAGIC">
	</form>

